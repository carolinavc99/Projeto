{
  "name": "app-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build:css": "postcss public/stylesheets/tailwind.css -o public/stylesheets/style.css",
    "watch:css": "postcss public/stylesheets/tailwind.css -o public/stylesheets/style.css --watch",
    "watch": "nodemon ./bin/www --ignore *.json",
    "dev": "concurrently \"npm:watch:css\" \"npm:watch\""
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "mongoose": "^6.3.6",
    "morgan": "~1.9.1",
    "passport": "^0.6.0",
    "passport-local-mongoose": "^7.1.2",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.23"
  }
}
