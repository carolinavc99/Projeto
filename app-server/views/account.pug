extends sidebar

block mainPage
  h1.text-center.text-3xl.font-bold Gest√£o da conta

  div.flex.flex-col.gap-16.pt-8(class="px-[30%]")
    div
      h2.font-bold.text-xl.pl-4.pb-6 Alterar dados pessoais 
      form(action="/account" method="post").flex.flex-col.items-stretch.gap-4
        input(type="hidden", name="id" value=user['_id'])
        div.grid.grid-cols-2.gap-x-8.gap-y-2.items-center
          label(for="username") Nome de utilizador
          input(type="text", name="username" class="border border-slate-600" value=user.username) 

          label(for="email") Email
          input(type="text", name="email" class="border border-slate-600" value=user.email)
        button(type="submit" class="self-center bg-slate-600 text-white px-2 py-1 rounded-xl") Submeter

    div
      h2.font-bold.text-xl.pl-4.pb-6 Alterar password
      form(action="/account/password" method="post").flex.flex-col.items-stretch.gap-4
        div.grid.grid-cols-2.gap-x-8.gap-y-2.items-center
          label(for="password") Nova password
          input(type="password", class="border border-slate-600" name="password")

          label(for="password_confirm") Nova password (confirmar)
          input(type="password", class="border border-slate-600" name="password_confirm")
        button(type="submit" class="self-center bg-slate-600 text-white px-2 py-1 rounded-xl") Submeter

    div
      h2.font-bold.text-xl.pl-4.pb-6 Token
      p.overflow-x-scroll= user.token
